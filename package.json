		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"stylelint": "stylelint --fix src/lib/**/* src/app.css src/css/*.css",
		"build:css": "sass src/lib/scss/index.scss src/lib/index.css"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chris-creditdesign/creditdesign-svelte-components.git"
	},
	"author": "chris-creditdesign",
	"devDependencies": {
		"@playwright/test": "^1.19.1",
		"@sveltejs/adapter-netlify": "^1.0.0-next.49",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"mdsvex": "^0.10.5",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"stylelint": "^14.5.3",
		"stylelint-config-html": "^1.0.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-order": "^5.0.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"svelte2tsx": "^0.5.5",
		"tslib": "^2.3.1",
		"typescript": "~4.5.4"
	},
	"type": "module",
	"keywords": [
		"svelte"
	],
	"homepage": "https://serene-albattani-31205c.netlify.app/"
